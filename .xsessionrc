# My default editor is nano. I don't even able to find exit button in vim :D
export EDITOR='code'
export TERMINAL='urxvt'
export BORWSER='firefox-esr'
export DMENUSETTINGS='-i -fn Roboto-10 -nb #282a36 -nf #f8f8f2 -sb #ff5555 -h 24'
# Para que las aplicaciones QT tengan estilos GTK
export QT_QPA_PLATFORMTHEME=gtk2

# Si la pongo en .profile no funcionan en tint2
# Make ~/.executor folder executable
export PATH="${PATH}:$HOME/.local/bin"
export PATH="${PATH}:/var/lib/flatpak/exports/bin"

exec openbox-session
