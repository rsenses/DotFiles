# Long format list
alias ls='ls --color=auto'
alias ll="ls -laF"
alias l='ls -CF'

# Print my public IP
alias myip='curl ipinfo.io/ip'

# NeoMutt
alias email='neomutt'

# Por seguridad
alias mv='mv -i'
alias rm='rm -i'

# CD
alias ..='cd ..'

# Colores
alias grep='grep --color=auto'

# TMUX
alias t=tmux

# Alias para repositorio Dotfiles
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

